
<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<StackPane fx:controller="com.comp2042.GuiController"
           xmlns:fx="http://javafx.com/fxml"
           alignment="CENTER">
    <Pane prefWidth="495" prefHeight="520" maxWidth="495" maxHeight="520">
        <VBox alignment="TOP_LEFT" layoutX="10" layoutY="40" spacing="2" prefWidth="80">
            <Label text="HOLD" styleClass="scoreTitleClass" prefWidth="80"/>
            <Pane styleClass="nextBrick" prefWidth="80" prefHeight="80" maxWidth="80" maxHeight="80">
                <GridPane fx:id="holdBrickPanel" hgap="1" vgap="1" layoutX="15" layoutY="15"/>
            </Pane>
        </VBox>

        <VBox alignment="TOP_LEFT" layoutX="375" layoutY="40" spacing="2" prefWidth="110">
            <Label text="SCORE" styleClass="scoreTitleClass" prefWidth="110"/>
            <Label fx:id="scoreLabel" text="0" styleClass="scoreClass" prefWidth="110"/>
            <Label text="HIGH SCORE" styleClass="scoreTitleClass" prefWidth="110" wrapText="true"/>
            <Label fx:id="highScoreLabel" text="0" styleClass="scoreClass" prefWidth="110"/>
            <Pane styleClass="nextBrick" prefWidth="100" prefHeight="280" maxWidth="100" maxHeight="280">
                <VBox spacing="15" layoutX="15" layoutY="10">
                    <GridPane fx:id="nextBrickPanel1" hgap="1" vgap="1"/>
                    <GridPane fx:id="nextBrickPanel2" hgap="1" vgap="1"/>
                    <GridPane fx:id="nextBrickPanel3" hgap="1" vgap="1"/>
                </VBox>
            </Pane>
        </VBox>

        <GridPane fx:id="ghostBrickPanel" vgap="1" hgap="1"/>
        <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
        <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="122" layoutY="40" prefWidth="212" prefHeight="443">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1"/>
            </center>
        </BorderPane>

        <Group fx:id="groupNotification" layoutX="122" layoutY="230">
            <VBox alignment="CENTER">
                <GameOverPanel fx:id="gameOverPanel"/>
            </VBox>
        </Group>
    </Pane>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>